<%- include('../partials/header') %>

	<!-- All CampGrounds -->
	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>Welcome to YelpCamp</h1>
				<p>View our hand-picked campgrounds from all over the world!</p>
				<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
			</div>
		</header>

		<div class="row">
			<div class="col-lg-12">
				<h3>Our Most Popular Sites</h3>
			</div>
		</div>

		<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<!-- Output all campgrounds from var array (v2 will have mongoDB -->
			<% campgrounds.forEach(function(camp) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= camp.image %>" width="700" height="500">
					<div class="caption">
						<h4><%= camp.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
		</div>
	</div>

<%- include('../partials/footer') %>
